# Cosmos DB Configuration
COSMOS_ACCOUNT_NAME=your-cosmos-account-name
COSMOS_PRIMARY_KEY=your-cosmos-primary-key
COSMOS_DATABASE=referral-network
COSMOS_GRAPH=hospital-graph

# Agent Provider: "azure" or "gradient"
AGENT_PROVIDER=gradient

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-06-01

# Gradient (DigitalOcean) Configuration
# Model Access Key for serverless inference (required for LLM calls)
# Create at: DigitalOcean Control Panel -> Gradient AI Platform -> Serverless Inference -> Model Access Keys
DIGITALOCEAN_API_TOKEN=your-digitalocean-api-token
GRADIENT_MODEL_ACCESS_KEY=sk-do-your-model-access-key
GRADIENT_MODEL=openai-gpt-oss-120b

# Backend API Configuration (for deployed DO ADK agent)
BACKEND_API_URL=https://your-function-app.azurewebsites.net
BACKEND_API_KEY=your-azure-functions-key
